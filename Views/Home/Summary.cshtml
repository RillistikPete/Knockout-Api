@model IEnumerable<WebServices.Models.Reservation>


@section Body
{
<div id="summary" class="section panel panel-primary">
    <div class="panel-heading">Reservation Summary</div>
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <thead>
                <tr><th>ID</th><th>Name</th><th>Location</th></tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ReservationID</td>
                        <td>@item.ClientName</td>
                        <td>@item.Location</td>
                        <td>
                            @Html.ActionLink("Remove", "Remove", new { id = item.ReservationID }, new { @class = "btn btn-xs bt-primary" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
}